import random

def guess_the_number():
    print("Welcome to the Number Guessing Game!")

    # Ask the user for the range
    while True:
        try:
            lower = int(input("Enter the lower bound of the number range: "))
            upper = int(input("Enter the upper bound of the number range: "))
            if lower >= upper:
                print("Lower bound must be less than upper bound. Please try again.")
                continue
            break
        except ValueError:
            print("Please enter valid integers for the range.")

    # Ask the user how many guesses they want
    while True:
        try:
            chances = int(input("How many guesses would you like to have? "))
            if chances <= 0:
                print("You must have at least one guess.")
                continue
            break
        except ValueError:
            print("Please enter a valid number of guesses.")

    # Generate the random number
    secret_number = random.randint(lower, upper)

    print(f"\nI'm thinking of a number between {lower} and {upper}.")
    print(f"You have {chances} chances to guess it.\n")

    for attempt in range(1, chances + 1):
        try:
            guess = int(input(f"Attempt {attempt}: Enter your guess: "))
        except ValueError:
            print("Please enter a valid integer.")
            continue

        if guess == secret_number:
            print("ðŸŽ‰ Congratulations! You guessed the number correctly!")
            break
        elif guess < secret_number:
            print("Too low!")
        else:
            print("Too high!")

        if attempt == chances:
            print(f"\nðŸ˜ž Sorry! You've used all your chances. The number was {secret_number}.")

# Run the game
guess_the_number()

